    function showModalStd(contentHtml) {
        const modal = document.createElement("div");
        //const modal = document.getElementById("tempModal");

        modal.classList.add("modal_u_app2");
        modal.innerHTML = `
                            <div class="modal__inner" style="width: 1000px">
